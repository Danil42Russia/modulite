  "@base-module1/base-sub-module":
    - "TestClass"
    - "test_function()"
    - "TEST_CONSTANT"
  "@module2":
    - "TestClass"
    - "test_function()"
    - "TEST_CONSTANT"
  "@module2/sub-module":
    - "TestClass"
    - "test_function()"
    - "TEST_CONSTANT"
  "\\Foo::__construct()":
    - "TestClass"
    - "test_function()"
    - "TEST_CONSTANT"
  "\\Foo::boo()":
    - "TestClass"
    - "test_function()"
    - "TEST_CONSTANT"
  "\\GlobalNamespace\\foo()":
    - "TestClass"
    - "test_function()"
